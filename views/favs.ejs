<br /><br />
<div class="container">
  <h1 class="sectionTitle">Favoritos</h1>
  <hr />

  <% if(item.length < 1){ %>
  <p class="text-center" style="margin-top: 10%">
    Aun no tenés favoritos. Agregá <a href="/app">acá.</a>
  </p>
  <% } %>

  <div class="container favContainer">
    <div class="row justify-content-center">
      <% for(var i = 0; i < item.length; i++){ %>

      <div
        class="card shadow-sm mb-4 itemCard"
        style="width: 20rem; padding: 1%; margin: 3%"
      >
        <img
          src="<%= device[item[i].id].picture %>"
          class="card-img-top"
          alt="<%= device[item[i].id].name %>"
          id="deviceImg"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= device[item[i].id].name %></h5>
          <div class="mt-auto">
            <p class="card-text">
              <img src="<%= storage_img %>" alt="" width="20px" /> <%=
              device[item[i].id].almacenamiento %>
            </p>
            <p class="card-text">
              <img src="<%= ram_img %>" alt="" width="20px" /> <%=
              device[item[i].id].ram %>
            </p>
            <p class="card-text">
              <img src="<%= battery_img %>" alt="" width="20px" />
              <%= device[item[i].id].battery_size + ' mAh' %>
            </p>
            <div class="row">
              <div class="btn-group" role="group" aria-label="Basic example">
                <button
                  type="button"
                  class="btn btn-danger"
                  data-bs-toggle="modal"
                  data-bs-target="#modalDelete<%= item[i].id %>"
                  style="width: 15%"
                >
                  X
                </button>
                <button
                  type="button"
                  data-bs-toggle="modal"
                  data-bs-target="#modalInfo<%= item[i].id %>"
                  class="btn btn-outline-dark"
                  style="width: 85%"
                >
                  Info
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal Delete START -->
      <div
        class="modal"
        id="modalDelete<%= item[i].id %>"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">
                <%= device[item[i].id].name %>
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <p>
                ¿Estás seguro que querés eliminar este dispositivo de tus
                favoritos?
              </p>
              <small>Esta acción no se puede deshacer.</small>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                Cancelar
              </button>
              <form action="/removeItem" method="post">
                <input
                  type="text"
                  name="deviceId"
                  value="<%= item[i].id %>"
                  hidden
                />
                <button type="submit" class="btn btn-danger">Remover</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal END -->

      <!-- Modal Info START -->
      <div
        class="modal"
        id="modalInfo<%= item[i].id %>"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">
                <%= device[item[i].id].name %>
              </h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="container">
                <h4 class="modalSubtitle">Almacenamiento</h4>
                <p><%= device[item[i].id].almacenamiento %></p>
                <h4 class="modalSubtitle">RAM</h4>
                <p><%= device[item[i].id].ram %></p>
                <h4 class="modalSubtitle">Batería</h4>
                <p><%= device[item[i].id].battery_size + ' mAh' %></p>
                <h4 class="modalSubtitle">Procesador</h4>
                <p><%= device[item[i].id].chipset %></p>
                <h4 class="modalSubtitle">CPU</h4>
                <p>
                  <% if(item[i]){ %> <%= device[item[i].id].specifications.CPU
                  %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Sistema Operativo</h4>
                <p><%= device[item[i].id].os %></p>
                <h4 class="modalSubtitle">Dimensiones</h4>
                <p>
                  <% if(item[i]){ %> <%=
                  device[item[i].id].specifications.Dimensions %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Peso</h4>
                <p>
                  <% if(item[i]){ %> <%=
                  device[item[i].id].specifications.Weight %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Resolución</h4>
                <p>
                  <% if(item[i]){ %> <%=
                  device[item[i].id].specifications.Resolution %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Bluetooth</h4>
                <p>
                  <% if(item[i]){ %> <%=
                  device[item[i].id].specifications.Bluetooth %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Tipo de cargador</h4>
                <p>
                  <% if(item[i]){ %> <%= device[item[i].id].specifications.USB
                  %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Tipo de carga</h4>
                <p>
                  <% if(item[i]){ %> <%=
                  device[item[i].id].specifications.Charging %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Sensores</h4>
                <p>
                  <% if(item[i]){ %> <%=
                  device[item[i].id].specifications.Sensors %>
                  <!-- -->
                  <% } %>
                </p>
                <h4 class="modalSubtitle">Disponibilidad</h4>
                <p>
                  <% if(item[i]){ %> <%=
                  device[item[i].id].specifications.Status %>
                  <!-- -->
                  <% } %>
                </p>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="submit"
                class="btn btn-dark"
                data-bs-dismiss="modal"
              >
                Ok
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal END -->

      <% } %>
    </div>
  </div>
</div>
