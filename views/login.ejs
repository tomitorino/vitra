<%- include('./partials/neutral-nav') %>

<div class="container login-form">
  <div class="container shadow mb-5 bg-white">
    <div class="row justify-content-center">
      <div class="col-8">
        <h3 class="login-title">Iniciar sesión</h3>
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="emailInput">Correo electrónico</label>
            <input type="email" class="form-control" name="username" />
          </div>
          <div class="mb-3">
            <label for="passwordInput">Contraseña</label>
            <input type="password" class="form-control" name="password" />
          </div>
          <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
      </div>
    </div>
    <br />
    <div class="row justify-content-center">
      <div class="col-8">
        <a class="btn btn-danger" href="/auth/google" role="button">
          <i class="fab fa-google"></i> Ingresar con Google
        </a>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-8">
        <hr />
        <p>¿No tenés una cuenta? <a href="/register">Registrate</a> gratis.</p>
      </div>
    </div>
  </div>
</div>

